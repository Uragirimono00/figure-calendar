{
  "manifest_version": 3,
  "name": "arca.live 작성자 정보",
  "version": "1.1",
  "description": "arca.live 게시글 작성자의 채널 내 활동 정보를 표시합니다.",
  "permissions": ["storage"],
  "host_permissions": ["*://arca.live/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://arca.live/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
